generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid())
  email    String  @unique
  password String?
  image    String?
  carts    Cart[]
  orders   Order[]

  @@index([email])
}

model Cart {
  id    String @id @default(uuid())
  name  String @unique
  email String
  price String
  image String
  total String
  qty   String
  user  User   @relation(fields: [email], references: [email])

  @@index([name])
}

model Order {
  id        String   @id @default(uuid())
  name      String
  qty       String
  price     String
  total     String
  email     String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [email], references: [email])
}
